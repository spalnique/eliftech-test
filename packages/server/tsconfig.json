{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@shared/types": ["../../shared/types/index.ts"]
    }
  },
  "include": ["src", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}
